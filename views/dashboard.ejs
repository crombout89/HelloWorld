<link rel='stylesheet' href='css/dashboard.css' />

<% const languageMap = {
    en: "üá∫üá∏ English",
    es: "üá™üá∏ Spanish",
    fr: "üá´üá∑ French",
    fa: "üáÆüá∑ Farsi",
    de: "üá©üá™ German",
    it: "üáÆüáπ Italian",
    zh: "üá®üá≥ Chinese",
    ar: "üá∏üá¶ Arabic",
    ru: "üá∑üá∫ Russian"
  }; %>

<div id="dashboard">
    <div id="dashboard-header">

        <section id="current-location">
            <h2>Your Current Location</h2>

            <section class="location-section">
              <h3>üìç Set Your Location</h3>
              <input id="city-input" type="text" placeholder="Type your city..." />
              <button id="save-city">Save Location</button>
              <button id="use-my-location">üìç Use My Current Location</button>

              <% if (user.profile.location?.city) { %>
              <p class="location-display">
                Current location: <strong><%= user.profile.location.city %>, <%= user.profile.location.country %></strong>
              </p>
              <% } else { %>
              <p class="location-display">No location set yet.</p>
              <% } %>
            </section>
        </section>

        <nav>
            <a href="/notifications" class="button">View Notifications</a>
            <a href="/logout" class="button">Logout</a>
        </nav>
    </div>

    <section id="profile-overview">

        <img 
            src="<%= user.profile.profilePicture || '/assets/svg/profile-placeholder.svg' %>" 
            alt="Profile Picture" 
            class="w-32 h-32 object-cover rounded-full shadow"
        />

        <div id="profile-info" class="">
            <h2>Welcome, <%= user.fullName || user.username %></h2>

            <p>
                <strong>Name:</strong>
                <%= user.profile.firstName || 'First' %>
                <%= user.profile.lastName || 'Last' %>
            </p>

            <p><strong>Language:</strong> <%= languageMap[user.profile.language] || "Not specified" %></p>

            <p><strong>Bio:</strong> <%= user.profile.bio || 'No bio yet.' %></p>
            
            <p><strong>Interests:</strong>
                <% if (user.profile.interests?.length) { %>
                <%= user.profile.interests.join(', ') %>
                <% } else { %>
                None listed.
                <% } %>
            </p>

            <a href="/profile" class="button">Edit Profile</a>
        </div>
    </section>

    <div class="friends-summary">
    <h2>Your Friends</h2>
    <p><strong>Friends:</strong> <%= friendCount %></p>
    <% if (friends.length === 0) { %>
        <p>No friends yet.</p>
    <% } else { %>
        <ul>
        <% friends.forEach(friend => { %>
            <li>
            <a href="/profile/<%= friend._id %>">
                <%= friend.profile?.firstName || friend.username %>
            </a>
            </li>
        <% }) %>
        </ul>
        <a href="/friends" class="button">View All Friends</a>
    <% } %>
    </div>
</div>

<!-- Load scripts at the end of body -->
<script src="/js/dashboard.js"></script>