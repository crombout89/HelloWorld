<h1 class="page-title">Discover</h1>

<div id="discoveryGrid" class="discovery-grid">
  <% discoveryOptions.forEach(option => { %>
  <div class="discovery-card" data-search-type="<%= option.title.toLowerCase().replace(/\s+/g, '-') %>">
    <img src="/<%= option.icon %>" alt="<%= option.title %> icon" />
    <h2><%= option.title %></h2>
    <p><%= option.description %></p>
  </div>
  <% }) %>
</div>

<script src="/js/discover.js"></script>