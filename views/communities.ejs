<!-- views/communities.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <% if (communities.length === 0) { %>
    <p>You are not in any communities yet.</p>
  <% } %>

  <% communities.forEach(c => { %>
    <div>
      <h2><%= c.name %></h2>
      <p><%= c.description %></p>
      <a href="/communities/<%= c._id %>">View</a>
    </div>
  <% }) %>
</body>
</html>