<!-- views/events/new.ejs -->
<h2>Create Event</h2>
<form action="/events/create" method="POST">
  <div>
    <label>Title:</label>
    <input type="text" name="title" required />
  </div>

  <div>
    <label for="communityId">Link to a Community (optional):</label>
    <select name="communityId">
      <option value="">— None —</option>
      <% communities.forEach(c => { %>
      <option value="<%= c._id %>"><%= c.name %></option>
      <% }) %>
    </select>
  </div>

  <!-- 🏷️ Tags -->
  <div>
    <label for="tags">Tags (comma-separated)</label>
    <input type="text" name="tags" id="tags" placeholder="e.g. music, outdoors" />
  </div>

  <div>
    <label>Description:</label>
    <textarea name="description"></textarea>
  </div>

  <div>
    <label>Start Time:</label>
    <input type="datetime-local" name="startTime" required />
  </div>

  <div>
    <label>End Time:</label>
    <input type="datetime-local" name="endTime" required />
  </div>

  <h3>📍 Event Location</h3>
  <div>
    <input type="text" name="locationName" value="<%= event.location?.name || '' %>" placeholder="Location Name" required>

    <input type="text" name="locationAddress" value="<%= event.location?.address || '' %>" placeholder="Street Address" required>

    <input type="text" name="latitude" value="<%= event.location?.latitude || '' %>" placeholder="Latitude" required>

    <input type="text" name="longitude" value="<%= event.location?.longitude || '' %>" placeholder="Longitude" required>
  </div>

  <div>
    <label>Visibility:</label>
    <select name="visibility">
      <option value="public">Public</option>
      <option value="friends">Friends Only</option>
      <option value="invite">Invite Only</option>
    </select>
  </div>

  <button type="submit">Create Event</button>
</form>
