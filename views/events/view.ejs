<!-- ğŸ”§ Manage Controls -->
<% if (isHost) { %>
<button id="open-edit-modal" style="margin-top: 60px;">âœï¸ Edit Event</button>
<form action="/events/<%= event._id %>/delete" method="POST" style="margin-top: 1rem;">
  <button type="submit" onclick="return confirm('Are you sure you want to delete this event?')">
    ğŸ—‘ï¸ Delete Event
  </button>
</form>
<% } %>

<!-- ğŸ‰ Event Title & Info -->
<h2><%= event.title %></h2>
<p><strong>Hosted By:</strong> <%= event.host?.username || "Unknown" %></p>

<% if (event.community) { %>
<p>ğŸ˜ï¸ This event is linked to a community:
  <a href="/communities/<%= event.community._id %>">
    <%= event.community.name %>
  </a>
</p>
<% } %>

<p><%= event.description %></p>

<!-- ğŸ·ï¸ Tags -->
<% if (event.tags?.length) { %>
<div class="event-tags">
  <strong>Tags:</strong>
  <% event.tags.forEach(tag => { %>
  <span class="tag-pill"><%= tag.name %></span>
  <% }) %>
</div>
<% } %>

<!-- ğŸ“© RSVP -->
<% if (
  event.invitees.some(i => i.toString() === currentUserId) &&
  !event.attendees.some(a => a.toString() === currentUserId)
) { %>
<form action="/events/<%= event._id %>/rsvp" method="POST">
  <label for="response">RSVP:</label>
  <select name="status" required>
    <option value="" disabled selected>Select response</option>
    <option value="going">âœ… Going</option>
    <option value="interested">ğŸ¤” Maybe</option>
    <option value="declined">âŒ Not Going</option>
  </select>
  <button type="submit">Submit</button>
</form>
<% } %>

<!-- ğŸ‘¥ Attendees List -->
<% if (groupedAttendees && Object.keys(groupedAttendees).length > 0) { %>
<div style="margin-top: 2rem;">
  <h3>Attendees</h3>
  <% for (let status in groupedAttendees) { %>
  <strong><%= status.charAt(0).toUpperCase() + status.slice(1) %>:</strong>
  <ul style="margin-bottom: 1rem;">
    <% groupedAttendees[status].forEach(user => { %>
    <li><a href="/u/<%= user.username %>"><%= user.username %></a></li>
    <% }) %>
  </ul>
  <% } %>
</div>
<% } %>

<!-- ğŸ—“ï¸ Timing & Location -->
<p><strong>Date:</strong>
  <%= new Date(event.startTime).toLocaleString() %> -
  <%= new Date(event.endTime).toLocaleString() %>
</p>
<p><strong>Location:</strong><br />
  <%= event.location.name || "No name" %><br />
  <%= event.location.address || "No address" %>
</p>

<!-- ğŸ—ºï¸ Leaflet Preview Map -->
<% if (event.location && event.location.lat && event.location.lon) { %>
<div id="event-view-map" style="height: 300px; margin: 1em 0;"></div>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    const lat = <%= event.location.lat %>;
    const lon = <%= event.location.lon %>;

    console.log("ğŸ“ Loaded event location:", lat, lon);

    const map = L.map("event-view-map").setView([lat, lon], 13);

    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      attribution: '&copy; OpenStreetMap contributors',
    }).addTo(map);

    L.marker([lat, lon])
      .addTo(map)
      .bindPopup(`<strong>${"<%= event.location.name || 'Event Location' %>"}</strong><br>${"<%= event.location.address || '' %>"}`)
      .openPopup();
  });
</script>
<% } %>

<!-- ğŸ§± Wall -->
<h3>Wall</h3>
<% if (canPost) { %>
<form action="/events/<%= event._id %>/wall/post" method="POST">
  <textarea name="message" required></textarea>
  <button type="submit">Post</button>
</form>
<% } %>

<% if (wallPosts.length > 0) { %>
<ul>
  <% wallPosts.forEach(post => { %>
  <li>
    <strong><%= post.author.username %></strong>: <%= post.message %><br>
    <small><%= new Date(post.createdAt).toLocaleString() %></small>
  </li>
  <% }) %>
</ul>
<% } else { %>
<p>No wall posts yet.</p>
<% } %>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("global-modal");

    function openModalFromURL(url) {
      modal.style.display = "flex";
      modal.innerHTML = `<div style="background:white;padding:2rem;border-radius:10px;">Loading...</div>`;

      fetch(url)
        .then(res => res.text())
        .then(html => {
          modal.innerHTML = `
            <div style="background:white;padding:2rem;border-radius:10px;max-width:600px;width:90%;position:relative;">
              <button id="modal-close" style="position:absolute;top:1rem;right:1rem;">âœ–</button>
              ${html}
            </div>
          `;
          document.getElementById("modal-close").addEventListener("click", () => {
            modal.style.display = "none";
            modal.innerHTML = "";
          });
        })
        .catch(err => {
          modal.innerHTML = "<p>âŒ Failed to load modal</p>";
          console.error("Modal load error:", err);
        });
    }

    // Wire up buttons
    document.getElementById("open-edit-modal")?.addEventListener("click", () => {
      openModalFromURL(`/events/<%= event._id %>/edit`);
    });

    document.getElementById("open-manage-modal")?.addEventListener("click", () => {
      openModalFromURL(`/events/<%= event._id %>/manage`);
    });
  });
</script>