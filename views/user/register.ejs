<link rel='stylesheet' href='css/home.css' />

<body>
  <div id="homepage-jumbotron" class="kenburns-container">
    <div id="register-jumbo-bg" class="kenburns-bg"></div>

    <div id="register-cta" class="animate__animated animate__fadeInUp animate__delay-2s">
      <div id="cta-content" class="">
        <h1><%= title %></h1>
        <p>Join HelloWorld and start building meaningful connections. Discover communities, share your interests, and find events that matter to youâ€”all in one place.</p>

        <form id="register-form" action="/register" method="POST">
          <input type="text" name="username" placeholder="Username" required>
          <input type="email" name="email" placeholder="Email" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit" class="btn">Register your account</button>
        </form>

        <% if (success) { %>
        <div class="success"><%- success %></div>
        <% } %>

        <% if (error) { %>
        <div class="error"><%= error %></div>
        <% } %>

        <div class="login-link">
          Already have an account? <a href="/login">Login here</a>
        </div>
      </div>

    </div>
    <script type="module" src="/js/index.js" defer></script>