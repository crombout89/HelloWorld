<form action="/messages/start" method="POST" style="margin-bottom: 2rem;">
  <label for="friendId">Start new conversation with:</label>
  <select name="friendId" required>
    <% friends.forEach(friend => { %>
    <option value="<%= friend._id %>">@<%= friend.username %></option>
    <% }) %>
  </select>
  <button type="submit">ğŸ’¬ Start Chat</button>
</form>

<% if (users.length === 0) { %>
  <p>No conversations yet.</p>
<% } else { %>
  <ul>
    <% users.forEach(user => { %>
      <li>
        <a href="/messages/<%= user._id %>">ğŸ’¬ <%= user.username %></a>
      </li>
    <% }) %>
  </ul>
<% } %>

