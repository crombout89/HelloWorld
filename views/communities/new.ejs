<title><%= title %></title>

<div class="page-title">
  <h1>Create a New Community</h1>
</div>

<form action="/communities/create" method="POST" enctype="multipart/form-data">

  <label for="coverImage">Cover Image:</label>
  <input type="file" name="coverImage" id="coverImage" accept="image/*">

  <label for="name">Community Name:</label><br>
  <input type="text" id="name" name="name" required><br><br>
  
  <!-- üè∑Ô∏è Tags Input -->
  <div>
    <label for="tags">Tags (comma-separated)</label>
    <input type="text" name="tags" id="tags" value="<%= community?.tags?.map(t => t.name).join(', ') || '' %>" />
  </div>

  <label for="description">Description:</label><br>
  <textarea id="description" name="description" rows="4" cols="50"></textarea><br><br>

  <button type="submit">Create</button>
</form>

<p><a href="/communities">‚Üê Back to My Communities</a></p>
<link rel="stylesheet" href="/css/community.css">

