<title><%= title %></title>

<div class="page-title">
  <h1>Edit Community</h1>
</div>

<!-- ✅ Main edit form -->
<form action="/communities/<%= community._id %>/edit" method="POST" enctype="multipart/form-data">

  <label for="coverImage">Change Cover Image:</label>
  <input type="file" name="coverImage" id="coverImage" accept="image/*" />

  <label for="name">Community Name:</label><br>
  <input type="text" id="name" name="name" value="<%= community.name %>" required><br><br>

  <!-- 🏷️ Tags Input -->
  <div>
    <label for="tags">Tags (comma-separated)</label>
    <input type="text" name="tags" id="tags" value="<%= community?.tags?.map(t => t.name).join(', ') || '' %>" />
  </div>

  <label for="description">Description:</label><br>
  <textarea id="description" name="description" rows="4" cols="50"><%= community.description %></textarea><br><br>

  <button type="submit">Save Changes</button>
</form> <!-- ✅ CLOSE THIS FORM -->

<!-- ✅ Current Tags with remove buttons -->
<% if (community.tags?.length > 0) { %>
<h4>Current Tags</h4>
<ul>
  <% community.tags.forEach(tag => { %>
  <li>
    <%= tag?.name || "Unnamed Tag" %>
    <form action="/communities/<%= community._id %>/tags/remove" method="POST" style="display:inline;">
      <input type="hidden" name="tagId" value="<%= tag._id %>" />
      <button type="submit">❌</button>
    </form>
  </li>
  <% }) %>
</ul>
<% } %>

<!-- ❌ Delete community form (separate) -->
<form action="/communities/<%= community._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this community?');" style="margin-top: 1em;">
  <button type="submit" style="color: red;">Delete Community</button>
</form>

<p><a href="/communities/<%= community._id %>">← Cancel</a></p>